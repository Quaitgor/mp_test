<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<weapon>
	<!--Spawned projectiles-->
	<projectiles>lvl0</projectiles>
	<projectiles>lvl0</projectiles>
	<projectiles>lvl0</projectiles>
	
	<!--Animation played (on unit)-->
	<graphics>pfirelvl0</graphics>
	
	<!--Delay until weapon is ready again-->
	<cooldown>30</cooldown>
	
	<!--Maximal amount of energy collected-->
	<maxEnergy>0</maxEnergy>
	
	<!--Key bound to weapon-->
	<key>a</key>
	
	<!--Hold down key makes continous fire-->
	<keyDownPossible>true</keyDownPossible>
	
	<!--Fires on keyDown(false) or keyUp(true)-->
	<fireOnRelease>false</fireOnRelease>
	<!--plays second Layer when fire is released-->
	<animOnRelease>false</animOnRelease>
	
	<!--Offset list for projectiles-->
	<pOffset>70</pOffset>
	<pOffset>0</pOffset>
	<pOffset>70</pOffset>
	<pOffset>-50</pOffset>
	<pOffset>70</pOffset>
	<pOffset>50</pOffset>
</weapon>